
<div class="row">
    <div class="col-sm-12">
        <div id="app" class="ibox">
            <div class="ibox-content">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="UserName">名字</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" v-model="form.UserName"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="LogonNo">编号</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" v-model="form.LogonNo" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="Password">密码</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" v-model="form.Password" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="StuGuid">角色</label>
                        <div class="col-sm-10">
                            <select v-model="form.RoleGuid" class="form-control">
                                <option v-for="role in roles" v-bind:value="role.RowGuid">{{role.Name}}</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="ibox-footer">
                <div class="row">
                    <div class="col-sm-2 col-sm-offset-2">
                        <button class="btn btn-success btn-outline" @@click="add"><i class="fa fa-plus"></i>添加</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="ibox">
            <div class="ibox-content">
                <table id="myTable" class="table table-hover"></table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/Biz/userManager.js">

    </script>
}
